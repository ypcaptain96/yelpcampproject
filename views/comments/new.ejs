<% include ../partials/header %>


    <div class = "row">
         <h1 style = "text-align: center;">Add New Comment to <%= campground.name %> </h1>
            <div style = "width: 30%; margin: 25px auto;">
                <form action = "/campgrounds/<%= campground._id %>/comments" method = "POST">
                    
                    <div class="input-group form-group">
                      <span class="input-group-addon"><i class="fa fa-file-text-o fa-fw" aria-hidden="true"></i></span>
                      <input class="form-control" type = "text" name = "comment[text]" placeholder = "text Content">
                    </div> 
                    
                     <div class = "form-group">
                       <button class = "btn btn-lg btn-primary btn-block"> SUBMIT! </button>
                    </div>
                    
                </form>
              <a href = "/campgrounds">Go to Campgrounds Page!</a>
            </div>
    </div>




