<% include ./partials/header %>

<body class="pageForm"> 

<div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="row">
        <div id="formDiv">
          <div class="col-md-6 imageForm">
            <img src="https://image.freepik.com/free-vector/mountain-landscape-with-tourist-on-foreground_1441-60.jpg" style = "padding: 3vw 0;">
          </div>

          <div class="col-md-6 formContent">
            <h1 id="title">Login</h1>
            <form action="/login" method="post">

              <div class="form-group">
                  <label for="userName">Username</label>
                  <div class="input-group" style = "display:inline-block; width:100%;">
                    <div class="input-group addon">
                      <span class="input-group-addon"><i class="fa fa-user fa-fw"></i></span>
                      <input class="form-control" type="text" placeholder="username" name="username">
                    </div>
                  </div>
              </div>
              
              <div class="form-group">
                  <label for="userName">Password</label>
                  <div class="input-group">
                    <div class="input-group addon">
                      <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
                      <input class="form-control" type="password" name="password" placeholder="password">
                    </div>
                  </div>
              </div>

              <div class="form-group text-center">
                <button class="btn btn-lg btn-primary">Login</button>
              </div>
              
              <p class = "foot-lnk"> 
                  <a href="/forgot" style = "color:#337ab7;"> Forgot Password? </a>
                </p>

              <div class="hr"></div>
              <div class="foot-lnk">
                
                <p> Not registered?
                  <a href="/register" style = "color:#337ab7;"> Sign Up </a>
                </p>
              </div>
            </form>
          </div>
          <div class="clearfix"></div>
        </div>
      </div>
    </div>
  </div>
    
    
<% include ./partials/footer %>
