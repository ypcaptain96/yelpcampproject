<% include ../partials/header %>

<body class="pageForm">
    <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="row">
        <div id="formDiv">
          
           <h1>Public Profile</h1>
           <div class = "hrEdit"></div>
                  <form action="/users/<%=user.id%>?_method=PUT" method="POST" autocomplete="off">
                <div class="form-group">
                    <label for="firstName">Name</label>
                    <input class="form-control" type="text" name="firstName" id="name" value="<%= user.firstName %>">
                </div>
                
                
                <div class="form-group">
                    <label for="email">E-Mail</label>
                    <input class="form-control" type="email" name="email" id="email" value="<%= user.email %>">
                </div>
                
                <div class="form-group">
                    <label for="avatar">Avatar URL</label>
                    <input class="form-control" type="text" name="avatar" id="avatar" value="<%= user.avatar %>">
                </div>
                
                <div class="form-group">
                    <label for="bio">Bio</label>
                     <textarea class="form-control" name="bio" id ="bio" rows="5" placeholder="Write a short description of yourself"><%= user.bio %></textarea>
                </div>
                
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Update profile</button>
                </div>
                
                <div class="hr"></div>
                
            </form>
          <div class="clearfix"></div>
        </div>
      </div>
    </div>
  </div>

    
<% include ../partials/footer %>