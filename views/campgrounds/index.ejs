<% include ../partials/header %>



<div class = "container">
        <header class = "jumbotron">
            <div class = "container">
               <h1>Welcome to YelpCamp</h1>
               <p>View our hand-picked campgrounds from all over the world!</p>
               <p>
                   <a class = "btn btn-primary btn-lg" href = "/campgrounds/new">Add a new Campground!</a>
               </p>
            </div>
        </header>
    
    
    <div class = "row text-center flex" >
        <% campgrounds.forEach(function(campground){ %>
            <div class = "col-md-3 col-sm-6">
                <div class = "thumbnail">
                    <div class = "image">
                        <img src = " <%= campground.image %> " >
                    </div>
                    <div class = "caption">
                         <h4> <strong><%= campground.name %></strong> </h4>
                    </div>
                    <p>
                        <a href = "campgrounds/<%= campground._id %>" class = "btn btn-primary btn-xs">More Info!</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>
        <p>
         <a class = "btn btn-info btn-sm" href = "/">Go to Home Page!</a>
        </p>
</div>
        
<% include ../partials/footer %>