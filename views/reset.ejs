<% include ./partials/header %>

<body class="pageForm"> 

<div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="row">
        <div id="formDiv">
         
          <div class="col-md-12 formContent">
            <legend>Reset Password</legend>
           <form action="/reset/<%= token %>" method="POST">

              
              <div class="input-group form-group">
                      <label for = "password">New Password</label>
                        <div class = "input-group addon">
                          <span class="input-group-addon"><i class="fa fa-key fa-fw" aria-hidden="true"></i></span>
                          <input class="form-control" name="password" type = "password" value="" placeholder="New password" autofocus="autofocus">
                        </div>
               </div> 
               
               <div class="input-group form-group">
                      <label for = "password">Confirm Password</label>
                        <div class = "input-group addon">
                          <span class="input-group-addon"><i class="fa fa-key fa-fw" aria-hidden="true"></i></span>
                          <input class="form-control" name="confirm" type = "password" value="" placeholder="Confirm password">
                        </div>
               </div> 
              
              <br>
              <div class="form-group text-center">
                <button class="btn btn-lg btn-primary">Update Password</button>
              </div>
             
              <div class="hr"></div>
            </form>
          </div>
          <div class="clearfix"></div>
        </div>
      </div>
    </div>
  </div>
  
<% include ./partials/footer %>